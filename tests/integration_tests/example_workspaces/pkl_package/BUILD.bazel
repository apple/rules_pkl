load("@rules_pkl//pkl/private:pkl_package.bzl", "pkl_package")

exports_files([
    "PklProject",
    "PklProject.deps.json",
])

pkl_package(
    name = "mypklpackage",
    srcs = [
        "srcs/tortoise.pkl",
    ],
    # --skip-publish-check has been added for the purpose of the tests as it skips the HTTP request normally
    # executed by the pkl project package command. This however means there is no validation as to whether the package
    # has already been published.
    extra_flags = ["--skip-publish-check"],
    project = "@mypklproject//:project",
)

py_test(
    name = "pkl_package_test",
    srcs = ["pkl_package_test.py"],
    data = [
        ":mypklpackage",
    ],
    deps = [
        "@bazel_tools//tools/python/runfiles",
    ],
)
