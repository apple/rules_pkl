load("@rules_java//java:defs.bzl", "java_library", "java_test")
load("@rules_jvm_external//:defs.bzl", "artifact")
load("@rules_pkl//pkl:defs.bzl", "pkl_java_library")

pkl_java_library(
    name = "base",
    srcs = [
        "srcs/base.pkl",
    ],
    module_path = [
        "//tests/pkl_codegen_java/module",
    ],
)

java_library(
    name = "pkl-config-java-internal",
    visibility = ["//visibility:public"],
    exports = [
        artifact(
            "org.pkl-lang:pkl-config-java",
            repository_name = "custom_pkl_java_library_maven_deps",
        ),
    ],
)

java_test(
    name = "litter_test",
    srcs = ["TestPklCodegen.java"],
    resource_strip_prefix = "tests/pkl_codegen_java",
    resources = [
        "srcs/base.pkl",
        "srcs/litter.pkl",
    ],
    test_class = "TestPklCodegen",
    deps = [
        artifact(
            "junit:junit",
            repository_name = "rules_pkl_deps",
        ),
        artifact(
            "org.pkl-lang:pkl-tools",
            repository_name = "rules_pkl_deps",
        ),
        ":base",
    ],
)

java_test(
    name = "polymorphism_test",
    srcs = ["PolymorphismTest.java"],
    resource_strip_prefix = "tests/pkl_codegen_java",
    resources = [
        "srcs/shelter.pkl",
    ],
    test_class = "PolymorphismTest",
    deps = [
        "//tests/pkl_codegen_java/module:animals",
        artifact(
            "junit:junit",
            repository_name = "rules_pkl_deps",
        ),
        artifact(
            "org.pkl-lang:pkl-config-java",
            repository_name = "rules_pkl_deps",
        ),
    ],
)
